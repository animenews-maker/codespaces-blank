{
  "channels": {
    "anime-news": {
      "welcome_message": "Welcome to Anime News!",
      "template": "🔥 {title} - {studio} #anime #news",
      "ping_roles": ["@Anime"],
      "thread_enabled": true,
      "pin_rotation": true,
      "post_interval": 30,
      "emoji_reactions": ["🔥", "🎬"],
      "daily_limit": 24
    },
    "manga-updates": {
      "welcome_message": "Latest Manga Drops!",
      "template": "📖 {title} - {author} #manga #update",
      "ping_roles": ["@Manga"],
      "thread_enabled": false,
      "pin_rotation": false,
      "post_interval": 60,
      "emoji_reactions": ["📖", "✨"],
      "daily_limit": 12
    },
    "trailer-drops": {
      "welcome_message": "New Trailers!",
      "template": "🎬 {title} - {studio} #trailer #anime",
      "ping_roles": ["@Trailers"],
      "thread_enabled": true,
      "pin_rotation": false,
      "post_interval": 45,
      "emoji_reactions": ["🎬", "🔥"],
      "daily_limit": 10
    },
    "reddit-feed": {
      "welcome_message": "Reddit Anime Feed!",
      "template": "🗨️ {title} #reddit #anime",
      "ping_roles": ["@Reddit"],
      "thread_enabled": false,
      "pin_rotation": false,
      "post_interval": 60,
      "emoji_reactions": ["🗨️", "⬆️"],
      "daily_limit": 20
    }
  },
  "sources": [
    "anilist", "reddit", "youtube", "ann", "mangadex", "myanimelist", "livechart", "kitsu", "twitter", "crunchyroll"
  ],
  "dashboard": {
    "enabled": true,
    "port": 8080
  },
  "backup": {
    "enabled": true,
    "path": "config_backup_YYYY-MM-DD.json"
  },
  "mood_engine": {
    "enabled": true,
    "default_mood": "neutral",
    "supported_moods": ["sad", "hype", "nostalgic", "romantic", "calm"],
    "vibe_check_interval": 60
  },
  "watchlist": {
    "enabled": true,
    "anilist_sync": true,
    "mal_sync": true,
    "notion_export": false
  },
  "calendar": {
    "enabled": true,
    "dashboard_url": "/calendar",
    "notify_on_delay": true
  },
  "voice_assistant": {
    "enabled": true,
    "tts": true,
    "stt": true,
    "supported_languages": ["en", "ja", "es", "hi", "fr", "ko"],
    "singing": true
  },
  "persona_system": {
    "enabled": true,
    "public_personas": true,
    "max_personas_per_user": 3
  },
  "music_ai": {
    "enabled": false
  },
  "future": {
    "vr_metaverse": {
      "enabled": false,
      "platforms": ["VRChat", "Horizon Worlds"],
      "avatar_support": true
    },
    "ai_characters": {
      "enabled": false,
      "npc_roleplay": true,
      "emotional_voice": true
    },
    "art_studio": {
      "enabled": false,
      "ai_model": "stable-diffusion",
      "nft_minting": false
    },
    "rpg": {
      "enabled": false,
      "multiplayer": true,
